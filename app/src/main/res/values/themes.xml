<resources>
    <style name="Base.Theme.Akira" parent="Theme.Material3.DayNight.NoActionBar"/>
    <style name="Theme.Akira" parent="Base.Theme.Akira">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F1F1F</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary color. -->
        <item name="colorSecondary">#373737</item>
        <item name="colorSecondaryVariant">#2C2C2C</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Background and surface colors. -->
        <item name="backgroundColor">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnBackground">#E0E0E0</item>
        <item name="colorOnSurface">#E0E0E0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Window background color. -->
        <item name="android:windowBackground">#121212</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/default_font_color</item>
        <!--    Default Font    -->
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Heading" parent="Base.Theme.Akira">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubHeading" parent="Base.Theme.Akira">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SmallHeading" parent="Base.Theme.Akira">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallSubHeading" parent="Base.Theme.Akira">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallBody" parent="Base.Theme.Akira">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextButton" parent="Base.Theme.Akira">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="TextMiniButton" parent="Base.Theme.Akira">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextTransparentButton" parent="Base.Theme.Akira">
        <item name="android:background">@drawable/rounded_shape_transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Button" parent="Base.Theme.Akira">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

</resources>